<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Material 3 Button Styles - Dark Theme -->
    <style name="Widget.Material3.Button" parent="Widget.Material3.Button.UnelevatedButton">
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">20dp</item>
        <item name="rippleColor">@color/md_theme_dark_primary</item>
    </style>

    <style name="Widget.Material3.Button.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">20dp</item>
        <item name="strokeColor">@color/md_theme_dark_primary</item>
        <item name="rippleColor">@color/md_theme_dark_primary</item>
    </style>

    <!-- Material 3 Tab Layout Styles - Dark Theme -->
    <style name="Widget.Material3.TabLayout" parent="Widget.Material3.TabLayout">
        <item name="tabTextAppearance">@style/TextAppearance.Material3.TabLayout</item>
        <item name="tabIndicatorColor">@color/md_theme_dark_primary</item>
        <item name="tabSelectedTextColor">@color/md_theme_dark_primary</item>
        <item name="tabTextColor">@color/md_theme_dark_on_surface</item>
        <item name="tabRippleColor">@color/md_theme_dark_primary</item>
    </style>

    <!-- Material 3 Text Appearance - Dark Theme -->
    <style name="TextAppearance.Material3.TabLayout" parent="TextAppearance.Material3.TitleSmall">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!-- Material 3 EditText Styles - Dark Theme -->
    <style name="Widget.Material3.TextInputLayout.FilledBox" parent="Widget.Material3.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">@color/md_theme_dark_surface</item>
        <item name="boxStrokeColor">@color/md_theme_dark_primary</item>
        <item name="hintTextColor">@color/md_theme_dark_on_surface</item>
    </style>

    <!-- Material 3 Switch Styles - Dark Theme -->
    <style name="Widget.Material3.CompoundButton.Switch" parent="Widget.Material3.CompoundButton.MaterialSwitch">
        <item name="thumbTint">@color/md_theme_dark_primary</item>
        <item name="trackTint">@color/md_theme_dark_surface</item>
    </style>

    <!-- Material 3 CheckBox Styles - Dark Theme -->
    <style name="Widget.Material3.CompoundButton.CheckBox" parent="Widget.Material3.CompoundButton.CheckBox">
        <item name="buttonTint">@color/md_theme_dark_primary</item>
    </style>

    <!-- Material 3 RadioButton Styles - Dark Theme -->
    <style name="Widget.Material3.CompoundButton.RadioButton" parent="Widget.Material3.CompoundButton.RadioButton">
        <item name="buttonTint">@color/md_theme_dark_primary</item>
    </style>
</resources>