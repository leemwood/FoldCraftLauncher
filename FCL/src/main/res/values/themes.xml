<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FoldCraftLauncher" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Material 3 Primary Colors -->
        <item name="colorPrimary">@color/md_theme_light_primary</item>
        <item name="colorOnPrimary">@color/md_theme_light_on_primary</item>
        <item name="colorPrimaryContainer">@color/md_theme_light_primary_container</item>
        <item name="colorOnPrimaryContainer">@color/md_theme_light_on_primary_container</item>
        
        <!-- Material 3 Secondary Colors -->
        <item name="colorSecondary">@color/md_theme_light_secondary</item>
        <item name="colorOnSecondary">@color/md_theme_light_on_secondary</item>
        <item name="colorSecondaryContainer">@color/md_theme_light_secondary_container</item>
        <item name="colorOnSecondaryContainer">@color/md_theme_light_on_secondary_container</item>
        
        <!-- Material 3 Surface Colors -->
        <item name="colorSurface">@color/md_theme_light_surface</item>
        <item name="colorOnSurface">@color/md_theme_light_on_surface</item>
        <item name="colorSurfaceVariant">@color/md_theme_light_surface_variant</item>
        <item name="colorOnSurfaceVariant">@color/md_theme_light_on_surface_variant</item>
        
        <!-- Material 3 Background Colors -->
        <item name="android:colorBackground">@color/md_theme_light_background</item>
        <item name="colorOnBackground">@color/md_theme_light_on_background</item>
        
        <!-- Status bar color -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/md_theme_light_surface</item>
        
        <!-- Material 3 Typography -->
        <item name="textAppearanceDisplayLarge">@style/TextAppearance.MD3.DisplayLarge</item>
        <item name="textAppearanceDisplayMedium">@style/TextAppearance.MD3.DisplayMedium</item>
        <item name="textAppearanceDisplaySmall">@style/TextAppearance.MD3.DisplaySmall</item>
        <item name="textAppearanceHeadlineLarge">@style/TextAppearance.MD3.HeadlineLarge</item>
        <item name="textAppearanceHeadlineMedium">@style/TextAppearance.MD3.HeadlineMedium</item>
        <item name="textAppearanceHeadlineSmall">@style/TextAppearance.MD3.HeadlineSmall</item>
        <item name="textAppearanceTitleLarge">@style/TextAppearance.MD3.TitleLarge</item>
        <item name="textAppearanceTitleMedium">@style/TextAppearance.MD3.TitleMedium</item>
        <item name="textAppearanceTitleSmall">@style/TextAppearance.MD3.TitleSmall</item>
        <item name="textAppearanceBodyLarge">@style/TextAppearance.MD3.BodyLarge</item>
        <item name="textAppearanceBodyMedium">@style/TextAppearance.MD3.BodyMedium</item>
        <item name="textAppearanceBodySmall">@style/TextAppearance.MD3.BodySmall</item>
        <item name="textAppearanceLabelLarge">@style/TextAppearance.MD3.LabelLarge</item>
        <item name="textAppearanceLabelMedium">@style/TextAppearance.MD3.LabelMedium</item>
        <item name="textAppearanceLabelSmall">@style/TextAppearance.MD3.LabelSmall</item>
        
        <!-- Customize your theme here. -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="Theme.Splash" parent="@style/Theme.SplashScreen">
        <item name="postSplashScreenTheme">@style/Theme.FoldCraftLauncher</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher_foreground</item>
        <item name="windowSplashScreenAnimationDuration">200</item>
        <item name="windowSplashScreenBackground">@color/white</item>
    </style>

    <style name="TabTextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="singleLine">true</item>
    </style>

    <style name="NavIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">#FFF</item>
    </style>
</resources>